  %title Josh Currency Converter
  %link{:href => "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", :rel => "stylesheet"}/
  / Custom CSS
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"}
%body
  / Navigation Bar
  %nav.menu.navbar-default.navbar-menu
    .container
      .menu-header
        %button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand Josh Currency Converter
  %br/
  %br/
  %br/
  .container
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-primary.text-center
          .panel-heading
            %h4.panel-title Currency Converter
          .error
            Please enter numeric value
          .panel-body
            %form.form-vertical
              .form-group.center
                %label{:for => ""} Enter Value:
                %input.amount.form-control{:min => "1", :placeholder => "Enter value", :type => "number"}/
              .form-group.inline-block
                %label{:for => ""} From currency:
                %select.currency-list.form-control{:onclick => "exchangeCurrency()"}
                  %option --Select--
              .form-group.inline-block
                %label To currency:
                %select.currency-list.form-control{:onclick => "exchangeCurrency()"}
                  %option --Select--
            %p.results 0
  %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"}
